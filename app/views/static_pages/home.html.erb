Header -->
<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>2017 Summer Challenge</h1>
                    <h3>Klesis 3 Sophomores</h3>
                    <h4><i>"And let us consider how to stir up one another to love and good works." Hebrews 10:24</i></h4>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <% if @oneSum >= @twoSum && @oneSum >= @threeSum %>
                            <h2 class="intro-count">Team 1: 
                                <%= @oneSum %>
                            </h2>
                            <% if @twoSum >= @threeSum %>
                                <h2 class="intro-count">Team 2: 
                                    <%= @twoSum %>
                                </h2>
                                <h2 class="intro-count">Team 3: 
                                    <%= @threeSum %>
                                </h2>
                            <% else %>
                                <h2 class="intro-count">Team 3: 
                                    <%= @threeSum %>
                                </h2>
                                <h2 class="intro-count">Team 2: 
                                    <%= @twoSum %>
                                </h2>
                            <% end %>

                        <% elsif @twoSum >= @oneSum && @twoSum >= @threeSum %>
                            <h2 class="intro-count">Team 2: 
                                <%= @twoSum %>
                            </h2>
                            <% if @oneSum >= @threeSum %>
                                <h2 class="intro-count">Team 1: 
                                    <%= @oneSum %>
                                </h2>
                                <h2 class="intro-count">Team 3: 
                                    <%= @threeSum %>
                                </h2>
                            <% else %>
                                <h2 class="intro-count">Team 3: 
                                    <%= @threeSum %>
                                </h2>
                                <h2 class="intro-count">Team 1 
                                    <%= @oneSum %>
                                </h2>
                            <% end %>

                        <% elsif @threeSum >= @oneSum && @threeSum >= @twoSum %>
                            <h2 class="intro-count">Team 3: 
                                <%= @threeSum %>
                            </h2>
                            <% if @twoSum >= @oneSum %>
                                <h2 class="intro-count">Team 2: 
                                    <%= @twoSum %>
                                </h2>
                                <h2 class="intro-count">Team 1: 
                                    <%= @oneSum %>
                                </h2>
                            <% else %>
                                <h2 class="intro-count">Team 1: 
                                    <%= @oneSum %>
                                </h2>
                                <h2 class="intro-count">Team 2: 
                                    <%= @twoSum %>
                                </h2>
                            <% end %>
                        <% end %>
                        
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
